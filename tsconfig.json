{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/config/*": ["config/*"],
      "@/services/*": ["services/*"],
      "@/types/*": ["types/*"],
      "@/routes/*": ["routes/*"],
      "@/prompts/*": ["prompts/*"],
      "@/script/*": ["script/*"],
      "@/tests/*": ["tests/*"],
      "@/middleware/*": ["middleware/*"],
      "@/validations/*": ["validations/*"],
      "@/controllers/*": ["controllers/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 